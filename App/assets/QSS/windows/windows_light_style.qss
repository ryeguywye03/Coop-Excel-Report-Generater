
/* General Light Mode Styling */
QMainWindow {
    background-color: #F2F2F2;
    color: #333333;
    font-family: Arial, sans-serif;
    font-size: 12px;
}

/* Sidebar Styling */
QWidget#sidebar {
    background-color: #E0E0E0;
    color: #0062A3;
    border: 1px solid #0062A3;
    padding: 10px;
    font-size: 14px;
}

/* Sidebar Buttons */
QPushButton {
    background-color: #0062A3;
    color: white;
    padding: 8px;
    border-radius: 5px;
    font-size: 12px;
    font-weight: bold;
}
QPushButton:hover {
    background-color: #00518C;
}
QPushButton:pressed {
    background-color: #004078;
}

/* Main Content Panel */
QWidget#mainpanel {
    background-color: #FFFFFF;
    color: #333333;
    padding: 10px;
    border: 1px solid #B0BEC5;
}

/* Title and Header Styling */
QLabel#title {
    font-size: 16px;
    font-weight: bold;
    color: #0062A3;
    padding: 5px;
    margin: 5px 0;
}

/* Report Preview Headers */
QHeaderView::section {
    background-color: #E0E0E0;
    color: #333333;
    font-weight: bold;
    border: 1px solid #B0BEC5;
    padding: 5px;
}

/* General Widget Styling */
QWidget {
    background-color: #F2F2F2;
    color: #333333;
}

/* Group Box Styling */
QGroupBox {
    border: 1px solid #0062A3;
    margin-top: 10px;
    font-weight: bold;
    color: #0062A3;
}
